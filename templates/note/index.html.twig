{% extends 'base.html.twig' %}

{% block title %}Hello NoteController!{% endblock %}

{% block body %}
<h1>Note index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>Category</th>
                <th>Create At</th>
                <th>Illustration</th>
            </tr>
        </thead>
        <tbody>
        {% for note in notes %}
            <tr>
                <td>{{ note.id }}</td>
                <td>{{ note.name }}</td>
                <td>{{ note.description }}</td>
                <td>{{ note.color }}</td>
                <td>{{ note.icon }}</td>
                <td>
                    <a href="{{ path('note_read', {'id': message.id}) }}">show</a>
                    <a href="{{ path('note_update', {'id': message.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('note_new') }}">Create new</a>

{% endblock %}
